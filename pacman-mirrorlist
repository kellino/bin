#!/usr/bin/bash

rename() {
    cd /etc/pacman.d || exit
    if [ -e mirrorlist ]; then
        mv mirrorlist mirrorlist.old
    fi
    mv mirrorlist.pacnew mirrorlist
}

choose_UK_servers() {
    sudo perl -ne -i 'if (/^## United Kingdom/../^$/) { next if /^## United Kingdom/ || /^$/; s/#//;}' mirrorlist
}

rename && choose_UK_servers
