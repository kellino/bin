#!/bin/sh

transset=$(which transset-df)
tmux=$(which tmux)
mutt=$(which mutt)
ranger=$(which ranger)

if [ -x "$transset" ];  then
    transset-df -a 0.75
fi

if [ -x "$tmux" ]; then
    tmux new-session -d
    tmux set-option -ga terminal-overrides ",xterm-256color:Tc"
    tmux detach
    tmux attach
fi 
    
if [ -x "$ranger" ]; then
    tmux new-window 'ranger'
fi

if [ -x "$mutt" ]; then
    tmux new-window 'mutt'
fi

tmux select-window -t 1
tmux -2 attach-session -d

